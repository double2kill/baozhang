extend ../../layout

block content
  .container
    .row
      .col-sm-3
      .col-sm-5
        form(method="POST", action="/user/signup")
          h2.text-center 注册
          .form-group
            label(for="signupName") 用户名
            input#signupName.form-control(name="name", type="text")
          .form-group
            label(for="signupPassword") 密码
            input#signupPassword.form-control(name="password", type="password")
          .form-group
            label(for="inputName") 真实姓名
            input#inputTitle.form-control(type="text", name="realname")
          .form-group
            label(for="inputName") 导师
            input#inputTitle.form-control(type="text", name="teacher")

          button.btn.btn-success(type="submit") 注册